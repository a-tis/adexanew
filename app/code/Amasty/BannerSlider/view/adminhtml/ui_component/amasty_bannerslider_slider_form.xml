<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="component" xsi:type="string">Amasty_BannerSlider/js/form/form</item>
            <item name="provider" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form_data_source</item>
            <item name="deps" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Edit Slider</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">amasty_bannerslider_slider_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/</item>
            </item>
            <item name="save" xsi:type="string">Amasty\BannerSlider\Block\Adminhtml\Slider\SaveButton</item>
            <item name="reset" xsi:type="string">Amasty\BannerSlider\Block\Adminhtml\Slider\ResetButton</item>
            <item name="save_and_continue" xsi:type="string">Amasty\BannerSlider\Block\Adminhtml\Slider\SaveAndContinueButton</item>
            <item name="delete" xsi:type="string">Amasty\BannerSlider\Block\Adminhtml\Slider\DeleteButton</item>
        </item>
    </argument>
    <dataSource name="amasty_bannerslider_slider_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Amasty\BannerSlider\Ui\DataProvider\Form\Slider\DataProvider</argument>
            <argument name="name" xsi:type="string">amasty_bannerslider_slider_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="ambannerslider/slider/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">General</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
            </item>
        </argument>

        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">id</item>
                    <item name="sortOrder" xsi:type="string">10</item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>

        <field name="store_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">store_id</item>
                    <item name="sortOrder" xsi:type="string">20</item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Slider Name</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="sortOrder" xsi:type="string">30</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>

        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="toggleLabels" xsi:type="array">
                        <item name="on" xsi:type="string" translate="true">Enabled</item>
                        <item name="off" xsi:type="string" translate="true">Disabled</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>

        <field name="autoplay">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Enable Autoplay</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="dataScope" xsi:type="string">autoplay</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="toggleLabels" xsi:type="array">
                        <item name="on" xsi:type="string" translate="true">Yes</item>
                        <item name="off" xsi:type="string" translate="true">No</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                    <item name="switcherConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                        <item name="rules" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.pause_time</item>
                                        <item name="callback" xsi:type="string">hide</item>
                                    </item>
                                </item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.pause_time</item>
                                        <item name="callback" xsi:type="string">show</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="pause_time">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Pause Time Between Transitions, ms</item>
                    <item name="notice" xsi:type="string">If left empty, the default value (3500) will be used.</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">pause_time</item>
                    <item name="default" xsi:type="number">3500</item>
                    <item name="sortOrder" xsi:type="string">60</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-number" xsi:type="boolean">true</item>
                        <item name="greater-than-equals-to" xsi:type="number">1</item>
                    </item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>

        <field name="animation_effect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Animation Effect</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="sortOrder" xsi:type="string">70</item>
                </item>
                <item name="options" xsi:type="object">Amasty\BannerSlider\Model\OptionSource\Slider\AnimationEffect</item>
            </argument>
        </field>

        <field name="transition_speed">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Slide Transition Speed, ms</item>
                    <item name="notice" xsi:type="string">For proper slider display we recommend to set a value more than 1000 here.</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">transition_speed</item>
                    <item name="sortOrder" xsi:type="string">80</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                        <item name="greater-than-equals-to" xsi:type="number">1</item>
                    </item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>

        <field name="navigation_arrows">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Navigation Arrows</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">90</item>
                    <item name="dataScope" xsi:type="string">navigation_arrows</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="toggleLabels" xsi:type="array">
                        <item name="on" xsi:type="string" translate="true">Show</item>
                        <item name="off" xsi:type="string" translate="true">Hide</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                    <item name="switcherConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                        <item name="rules" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.arrows_style</item>
                                        <item name="callback" xsi:type="string">hide</item>
                                    </item>
                                </item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.arrows_style</item>
                                        <item name="callback" xsi:type="string">show</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="arrows_style">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Arrows Style</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="string">100</item>
                </item>
                <item name="options" xsi:type="object">Amasty\BannerSlider\Model\OptionSource\Slider\ArrowsStyle</item>
            </argument>
        </field>

        <field name="navigation_bullets">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Navigation Bullets</item>
                    <item name="notice" xsi:type="string">On mobile only bullets are displayed by default (arrows will appear only if current setting is set to 'Hide').</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">110</item>
                    <item name="dataScope" xsi:type="string">navigation_bullets</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="toggleLabels" xsi:type="array">
                        <item name="on" xsi:type="string" translate="true">Show</item>
                        <item name="off" xsi:type="string" translate="true">Hide</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                    <item name="switcherConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                        <item name="rules" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.bullets_style</item>
                                        <item name="callback" xsi:type="string">hide</item>
                                    </item>
                                </item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.bullets_style</item>
                                        <item name="callback" xsi:type="string">show</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="bullets_style">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Bullets Style</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="string">120</item>
                </item>
                <item name="options" xsi:type="object">Amasty\BannerSlider\Model\OptionSource\Slider\BulletsStyle</item>
            </argument>
        </field>

        <field name="resize_images">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Resize Images</item>
                    <item name="notice" xsi:type="string">If set to ‘Yes’ images will be resized in backend (recommended for better score on Google PageSpeed Insights).</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">130</item>
                    <item name="dataScope" xsi:type="string">resize_images</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="toggleLabels" xsi:type="array">
                        <item name="on" xsi:type="string" translate="true">Yes</item>
                        <item name="off" xsi:type="string" translate="true">No</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                    <item name="switcherConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                        <item name="rules" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.banner_height</item>
                                        <item name="callback" xsi:type="string">hide</item>
                                    </item>
                                </item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.general.banner_height</item>
                                        <item name="callback" xsi:type="string">show</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="banner_width">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Width, px</item>
                    <item name="notice" xsi:type="string">Default value. Defines the max slider width. Banner size will decrease depending on a viewport.</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">banner_width</item>
                    <item name="sortOrder" xsi:type="string">140</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                        <item name="greater-than-equals-to" xsi:type="number">1</item>
                    </item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>

        <field name="banner_height">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Height, px</item>
                    <item name="notice" xsi:type="string">Default value. Banner size will decrease depending on a viewport.</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">banner_height</item>
                    <item name="sortOrder" xsi:type="string">150</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                        <item name="greater-than-equals-to" xsi:type="number">1</item>
                    </item>
                    <item name="source" xsi:type="string">amasty_bannerslider_slider</item>
                </item>
            </argument>
        </field>
    </fieldset>

    <fieldset name="banners">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Banners</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">false</item>
                <item name="sortOrder" xsi:type="number">160</item>
            </item>
        </argument>
        <container name="button_set" template="ui/form/components/complex">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="componentType" xsi:type="string">container</item>
                    <item name="label" xsi:type="string" />
                </item>
            </argument>
            <container name="parent_buttons">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="label" xsi:type="boolean">false</item>
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="componentType" xsi:type="string">container</item>
                        <item name="component" xsi:type="string">Magento_Ui/js/form/components/button</item>
                        <item name="title" xsi:type="string" translate="true">Add Banners</item>
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.banners.parent_modal</item>
                                <item name="actionName" xsi:type="string">toggleModal</item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="targetName" xsi:type="string">amasty_bannerslider_slider_form.amasty_bannerslider_slider_form.banners.parent_modal.parent_banner_grid</item>
                                <item name="actionName" xsi:type="string">render</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </container>
        </container>
        <container name="parent_modal">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentType" xsi:type="string">modal</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/modal/modal-component</item>
